<!--
    Maps channel 0 on slot 6 (Uniblitz shutter(s) on Bergamo III)
    to the joystick.
-->
<Joystick>
    <!--Push Button-->
    <InMap control="0">
        <ModifyControl>
            <Port value="0" />
            <ControlNum value="0" />
        </ModifyControl>
        <Destination>
            <Slot value="32" />
            <Bit value="1" />
            <Port value="0" />
            <Virtual value="0" />
        </Destination>
        <VID value="0x1313" />
        <PID value="0x2010" />
        <ModifySpeed value="255" />
        <ReverseDir value="0" />
        <Deadband value="0" />
        <Mode value="9" />
    </InMap>
    
    <!--Fluorescence Turret Button 1-->
    <OutMap control="0">
        <Source>
            <Slot value="32" />
            <Bit value="0" />
            <Port value="0" />
            <Virtual value="0" />
        </Source>
        <Usage value="8" />
        <VID value="0x1313" />
        <PID value="0x2010" />
        <Mode value="3" />
        <ColorID index="1" value="0" />
        <ColorID index="2" value="1" />
        <ColorID index="3" value="0" />
    </OutMap>

</Joystick>

<?xml version="1.0"?>

<System>
    <Settings>
        <Card slot="1" type="19" device-detect="true" />
        <Card slot="2" type="19" device-detect="true" />
        <Card slot="3" type="19" device-detect="true" />
        <Card slot="4" type="19" device-detect="true" />
        <Card slot="5" type="19" device-detect="true" />
        <Card slot="6" type="21" device-detect="true">
            <CustomConfig>
                <Include href="device/flipper-shutter/Bergamo3.xml" />
            </CustomConfig>
        </Card>
        <Card slot="7" type="21" device-detect="true" />
    </Settings>

    <AllowedDevices>
        <!--Only
        Using Serial Number protection-->
        <Device>
            <Signature>
                <DefaultSlotType value="19" />
                <DeviceID value="0xFFFF" />
            </Signature>
            <Allow slot="1" />
            <Allow slot="2" />
            <Allow slot="3" />
            <Allow slot="4" />
            <Allow slot="5" />
            <DeviceLock slot="1" enabled="false" />
            <DeviceLock slot="2" enabled="false" />
            <DeviceLock slot="3" enabled="false" />
            <DeviceLock slot="4" enabled="false" />
            <DeviceLock slot="5" enabled="false" />
        </Device>

        <!--Allow
        all Slider IO Devices on slot 7-->
        <Device>
            <Signature>
                <DefaultSlotType value="9" />
                <DeviceID value="0xFFFF" />
            </Signature>
            <Allow slot="7" />
            <DeviceLock slot="7" enabled="false" />
        </Device>

        <!--Allow
        all Shutter 4 Devices on slot 6-->
        <Device>
            <Signature>
                <DefaultSlotType value="10" />
                <DeviceID value="0xFFFF" />
            </Signature>
            <Allow slot="6" />
            <DeviceLock slot="6" enabled="false" />
        </Device>

        <!--Allow
        all Shutter 4 (rev 4) Devices on slot 6-->
        <Device>
            <Signature>
                <DefaultSlotType value="18" />
                <DeviceID value="0xFFFF" />
            </Signature>
            <Allow slot="6" />
            <DeviceLock slot="6" enabled="false" />
        </Device>

        <!--Allow
        all Flipper-Shutter Devices on slot 6 and 7-->
        <Device>
            <Signature>
                <DefaultSlotType value="20" />
                <DeviceID value="0xFFFF" />
            </Signature>
            <Allow slot="6" />
            <Allow slot="7" />
            <DeviceLock slot="6" enabled="false" />
            <DeviceLock slot="7" enabled="false" />
        </Device>

        <!--Allow
        all Flipper-Shutter (revA) Devices on slot 6 and 7-->
        <Device>
            <Signature>
                <DefaultSlotType value="21" />
                <DeviceID value="0xFFFF" />
            </Signature>
            <Allow slot="6" />
            <Allow slot="7" />
            <DeviceLock slot="6" enabled="false" />
            <DeviceLock slot="7" enabled="false" />
        </Device>
    </AllowedDevices>

    <Joysticks>
        <Port index="0">
            <Name value="PORT_1" />
            <Include href="./joysticks/MCMK4S-slot4-1-2-3_5-port0.xml" />
        </Port>
        <Port index="1">
            <Name value="PORT_2" />
            <Include href="./joysticks/MCMK4S-slot4-1-2-3_5-port1.xml" />
        </Port>
        <Port index="2">
            <Name value="PORT_3" />
            <Include href="./joysticks/MCMJ1S-slot1-2-port2.xml" />
        </Port>
        <Port index="3">
            <Name value="PORT_4" />
            <Include href="./joysticks/MCMK1S-slot3-port3.xml" />
        </Port>

        <Port index="4">
            <Name value="PORT_5" />
            <Include href="./joysticks/powermate-port4.xml" />
        </Port>
    </Joysticks>

</System>

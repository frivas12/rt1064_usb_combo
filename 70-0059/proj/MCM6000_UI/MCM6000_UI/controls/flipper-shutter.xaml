<UserControl x:Class="MCM6000_UI.controls.flipper_shutter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCM6000_UI.controls"
             xmlns:vms="clr-namespace:MCM6000_UI.controls.vms"
             xmlns:converters="clr-namespace:MCM6000_UI.converters"
             mc:Ignorable="d" 
             d:DesignHeight="168"
             d:DesignWidth="590"
             d:DataContext="local:flipper_shutter">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ThemeControl;component/ThorStyleDark.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--Used for populating combobox in system tabs for device id's-->
            <XmlDataProvider x:Key="Device_id_XmlData"/>
            <Style TargetType="RadioButton">
                <Setter Property="Foreground" Value="White" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" Content="{Binding Header}" />
        <Grid Grid.Row="1" x:Name="e_grd_top" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Margin="2"
                    Padding="4"
                    BorderBrush="White" BorderThickness="1">
                <Grid Grid.IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" SharedSizeGroup="Channels"/>
                        <ColumnDefinition Width="200" SharedSizeGroup="Content" />
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <converters:SwitchingConverter x:Key="enable_converter" TrueObject="DISABLE" FalseObject="ENABLE" />
                        <DataTemplate DataType="{x:Type vms:ShutterControllerVM}">
                            <Grid>
                                <Grid.Resources>
                                    <ResourceDictionary>
                                        <converters:NotEqual x:Key="not_equal" />
                                    </ResourceDictionary>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Channels" />
                                    <ColumnDefinition SharedSizeGroup="Content" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Content="{Binding ChannelName}" />
                                <UniformGrid Grid.Column="1" Columns="3">
                                    <Button Width="60" Command="{Binding ToggleEnable}" Content="{Binding IsEnabled, Converter={StaticResource enable_converter}}"/>
                                    <Button Width="60" Content="OPEN" Command="{Binding MoveToOpen}" />
                                    <Button Width="60" Content="CLOSE" Command="{Binding MoveToClosed}" />
                                </UniformGrid>
                            </Grid>
                        </DataTemplate>
                        <vms:ShutterControllerVM x:Key="design_ttl_output_vm" />
                    </Grid.Resources>
                    <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Shutter Channels" HorizontalContentAlignment="Center" />
                    <ContentPresenter Grid.Row="1" Grid.ColumnSpan="2" Content="{Binding ShutterControllers[0]}"
                                      d:Content="{StaticResource design_ttl_output_vm}">
                    </ContentPresenter>
                    <ContentPresenter Grid.Row="2" Grid.ColumnSpan="2" Content="{Binding ShutterControllers[1]}"
                                      d:Content="{StaticResource design_ttl_output_vm}"/>
                    <ContentPresenter Grid.Row="3" Grid.ColumnSpan="2" Content="{Binding ShutterControllers[2]}"
                                      d:Content="{StaticResource design_ttl_output_vm}"/>
                    <ContentPresenter Grid.Row="4" Grid.ColumnSpan="2" Content="{Binding ShutterControllers[3]}"
                                      d:Content="{StaticResource design_ttl_output_vm}"/>
                </Grid>
            </Border>

            <Border Grid.Column="2"
                    Margin="2"
                    Padding="4"
                    BorderBrush="White" BorderThickness="1">
                <Grid Grid.IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" SharedSizeGroup="Channels"/>
                        <ColumnDefinition Width="200" SharedSizeGroup="Content" />
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <converters:SwitchingConverter x:Key="enable_converter" TrueObject="DISABLE" FalseObject="ENABLE" />
                        <DataTemplate DataType="{x:Type vms:TTLOutputVM}">
                            <Grid>
                                <Grid.Resources>
                                    <ResourceDictionary>
                                        <converters:NotEqual x:Key="not_equal" />
                                    </ResourceDictionary>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Channels" />
                                    <ColumnDefinition SharedSizeGroup="Content" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Content="{Binding ChannelName}" />
                                <UniformGrid Grid.Column="1" Columns="3">
                                    <Button Width="60" Command="{Binding ToggleEnable}" Content="{Binding IsEnabled, Converter={StaticResource enable_converter}}"/>
                                    <Button Width="60" Content="OFF" Command="{Binding SetLevelLow}" />
                                    <Button Width="60" Content="ON" Command="{Binding SetLevelHigh}" />
                                </UniformGrid>
                            </Grid>
                        </DataTemplate>
                        <vms:TTLOutputVM x:Key="design_ttl_output_vm" />
                    </Grid.Resources>

                    <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Sio Channels" HorizontalContentAlignment="Center" />
                    <ContentPresenter Grid.Row="1" Grid.ColumnSpan="2" Content="{Binding Sios[0]}"
                                      d:Content="{StaticResource design_ttl_output_vm}">
                    </ContentPresenter>
                    <ContentPresenter Grid.Row="2" Grid.ColumnSpan="2" Content="{Binding Sios[1]}"
                                      d:Content="{StaticResource design_ttl_output_vm}"/>
                    <ContentPresenter Grid.Row="3" Grid.ColumnSpan="2" Content="{Binding Sios[2]}"
                                      d:Content="{StaticResource design_ttl_output_vm}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

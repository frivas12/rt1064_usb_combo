<UserControl x:Class="MCM6000_UI.controls.pnp_error_handler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCM6000_UI.controls"
             mc:Ignorable="d" 
             d:DesignHeight="138"
             d:DesignWidth="590">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ThemeControl;component/ThorStyleDark.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--Used for populating combobox in system tabs for device id's-->
            <XmlDataProvider x:Key="Device_id_XmlData"/>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="White" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Label Content="Uh oh!  A Plug-and-Play Error Occurred!" />
                <Label Content="{Binding HexStatus}" />
            </StackPanel>
        </Border>
        <TextBlock x:Name="e_tbk_guide" Grid.Row="1" Margin="5,5,5,5" Text="{Binding GuideText, Mode=OneWay}" TextWrapping="Wrap" />

        <Grid Grid.Row="2" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="e_btn_yes" Grid.Column="1" Content="Yes" Click="Button_yes_Clicked" IsEnabled="{Binding EnableYes}" />
            <Button x:Name="e_btn_no" Grid.Column="3" Content="No" Click="Button_no_Clicked" IsEnabled="{Binding EnableNo}" />
            <Button x:Name="e_btn_cancel" Grid.Column="5" Content="Cancel" Click="Button_cancel_Clicked" />
        </Grid>
    </Grid>
</UserControl>

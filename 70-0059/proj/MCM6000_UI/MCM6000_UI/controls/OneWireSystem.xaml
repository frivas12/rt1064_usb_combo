<UserControl x:Class="MCM6000_UI.controls.OneWireSystem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCM6000_UI.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="2,5,2,5" />
                    <Setter Property="IsEnabled" Value="False" />
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="100" Width="auto" />
            <ColumnDefinition MinWidth="300" Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition SharedSizeGroup="RowSize" />
            <RowDefinition SharedSizeGroup="RowSize" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CheckBox IsChecked="{Binding IsSystemReady, Mode=OneWay}"
                     Grid.Row="0"
                     Content="System" />
        <Grid Grid.Row="0" Grid.Column="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox ItemsSource="{Binding SystemTypes}"
                      SelectedItem="{Binding SelectedSystem}"
                      Margin="10,0,0,0"
                      Grid.Column="1" />
        </Grid>

        <CheckBox IsChecked="{Binding IsAxisReady, Mode=OneWay}"
                     Grid.Row="1"
                     Content="Axis/Component" />
        <Grid Grid.Row="1" Grid.Column="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox ItemsSource="{Binding AxisTypes}"
                      SelectedItem="{Binding SelectedAxis}"
                      Margin="10,0,0,0"
                      Grid.Column="1" />
        </Grid>
    </Grid>
</UserControl>

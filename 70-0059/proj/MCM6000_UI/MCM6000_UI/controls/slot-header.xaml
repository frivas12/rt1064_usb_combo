<UserControl x:Class="MCM6000_UI.controls.slot_header"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCM6000_UI.controls"
      mc:Ignorable="d" 
      d:DesignHeight="30" d:DesignWidth="590"
      d:DataContext="{d:DesignInstance Type=local:slot_header}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ThemeControl;component/ThorStyleDark.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--Used for populating combobox in system tabs for device id's-->
            <XmlDataProvider x:Key="Device_id_XmlData"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <Label Content="{Binding SlotText}" />
        <Label Grid.Column="1" Content="{Binding ControlType}" Margin="5,0,0,0"/>
        <TextBox Grid.Column="2" Text="{Binding UserTitle, Mode=TwoWay}" Margin="5,0,0,0" MaxLength="16" VerticalAlignment="Center" />
        <Button Grid.Column="3" Content="Set" Margin="5,0,0,0" VerticalAlignment="Center" Click="Button_SetSlotTitle_Clicked" />
        <Button Grid.Column="4" Content="Troubleshoot" Foreground="Yellow" Margin="5,5,5,5" Visibility="{Binding ShowErrorHandler}" Click="Button_OpenErrorHandler_Clicked" />
        <Button Grid.Column="5" HorizontalAlignment="Right" Content="Identify" Margin="0,5,5,5" Click="Button_Identify_Clicked" />
        <Label Grid.Column="6" Content="Stage Name:" />
        <Label Grid.Column="7" Content="{Binding StageName}" />
    </Grid>
</UserControl>

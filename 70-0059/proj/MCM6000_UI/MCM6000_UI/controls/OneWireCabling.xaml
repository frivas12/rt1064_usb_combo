<UserControl x:Class="MCM6000_UI.controls.OneWireCabling"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCM6000_UI.controls"
             mc:Ignorable="d" 
             xmlns:builders="clr-namespace:MCM6000_UI.builders"
             d:DataContext="{d:DesignInstance builders:OneToOneViewModel}"
             d:DesignHeight="440" d:DesignWidth="880">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="2,5,2,5" />
                    <Setter Property="IsEnabled" Value="False" />
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="100" Width="auto" />
            <ColumnDefinition MinWidth="300" Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition SharedSizeGroup="RowSize" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CheckBox IsChecked="{Binding IsTypeProvided, Mode=OneWay}"
                     Grid.Row="0"
                     Content="Part Type" />
        <Grid Grid.Row="0" Grid.Column="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Part Type:" Margin="0,0,10,0" />
            <ComboBox ItemsSource="{Binding PartTypes}"
                      SelectedItem="{Binding SelectedPartType}"
                      Grid.Column="1" />
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="MCM6000_UI.EFSFileDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCM6000_UI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="870">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ThemeControl;component/ThorStyleDark.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--Used for populating combobox in system tabs for device id's-->
            <XmlDataProvider x:Key="Device_id_XmlData"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border BorderThickness="1,1,1,1" BorderBrush="White" CornerRadius="1,1,1,1">
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding Identifier}" Width="130"/>
            <Label Content="{Binding PageLength}" Width="100"/>
            <Label Content="{Binding AER}" Width="50"/>
            <Label Content="{Binding AEW}" Width="50"/>
            <Label Content="{Binding AED}" Width="50"/>
            <Label Content="{Binding AFR}" Width="50"/>
            <Label Content="{Binding AFW}" Width="50"/>
            <Label Content="{Binding AFD}" Width="50"/>
            <Label Content="{Binding Owned}" Width="50"/>
            <Button Content="Download" Width="65" Margin="60,5,5,5" Click="Button_Download_Clicked" Background="#FF4FFB59" />
            <Button Content="Refresh" Width="65" Margin="5,5,5,5" Click="Button_Refresh_Clicked" Background="#FFE6A74C" />
            <Button Content="Delete" Width="65" Margin="5,5,5,5" Click="Button_Delete_Clicked" Background="Red" Foreground="White" />
        </StackPanel>
    </Border>
</UserControl>

<?xml version="1.0"?>
<!-- 
Slot 1 High_Current_Stepper_Card
Slot 2 High_Current_Stepper_Card	
Slot 3 Shutter_4_type
Slot 4 
Slot 5 
Slot 6 Slider_IO_type
Slot 7 
Slot 8 (half slot)

** Future cards to add **
* Piezo for focus
* XY brushless drive for MLS stage
-->

<System>


<SystemSettings>

<!-- set the card types 

            NO_CARD_IN_SLOT = 0,
            CARD_IN_SLOT_NOT_PROGRAMMED = 1,
            ST_Stepper_type,                // 2  (obsolete)
            High_Current_Stepper_Card,      // 3  (41-0093-004)
            Servo_type,                     // 4  (41-0098-001)
            Shutter_type,                   // 5  (obsolete)
            OTM_Dac_type,                   // 6  (on OTM board)
            OTM_RS232_type,                 // 7  (on OTM board)
            High_Current_Stepper_Card_HD,   // 8  (41-0107)
            Slider_IO_type,                 // 9  (41-0104)
            Shutter_4_type,                 // 10 (41-0108)
            Piezo_Elliptec_type,            // 11 (connected to slot 8)
            ST_Invert_Stepper_BISS_type,    // 12 (41-0113)
            ST_Invert_Stepper_SSI_type      // 13 (41-0113)
			
-->
<!-- Slot 1 -->
<CardType command="0x4004" data_length="10">
<Parameter name="slot" type="Byte" length="1" offset="6" value="0"/>	
<Parameter name="b_type" type="UInt16" length="2" offset="8" value="3"/>
</CardType>

<!-- Slot 2 -->
<CardType command="0x4004" data_length="10">
<Parameter name="slot" type="Byte" length="1" offset="6" value="1"/>	
<Parameter name="b_type" type="UInt16" length="2" offset="8" value="3"/>
</CardType>

<!-- Slot 3 -->
<CardType command="0x4004" data_length="10">
<Parameter name="slot" type="Byte" length="1" offset="6" value="2"/>	
<Parameter name="b_type" type="UInt16" length="2" offset="8" value="10"/>
</CardType>

<!-- Slot 6 -->
<CardType command="0x4004" data_length="10">
<Parameter name="slot" type="Byte" length="1" offset="6" value="5"/>	
<Parameter name="b_type" type="UInt16" length="2" offset="8" value="9"/>
</CardType>

</SystemSettings>

<Slots>
	<Slot type="Stage" name="SLOT_1" slot_num="0"><Stage name="PLS"/></Slot>
	<Slot type="Stage" name="SLOT_2" slot_num="1"><Stage name="PLS"/></Slot>
	<!--<Slot type="Shutter_4" name="SLOT_3" slot_num="2"><Shutter_4 name="inverted_shutters"/></Slot>-->
	<Slot type="Slider_io" name="SLOT_6" slot_num="5"><Slider_io name="bergamo_flipper_mirros"/></Slot>
</Slots>

<!-- Set smart devices (*** look at "device_id.xml" for ids ***)-->
<Devices>
	<Device slot_num="5" name="test_device"/>
</Devices>

<Joysticks>
	<Joystick type="Port" name="PORT_0" port_num="0"><Joystick_type name="1 Knob with speed button slot 1" /></Joystick>
</Joysticks>









</System>

<?xml version="1.0"?>
<System>


<SystemSettings>

<!-- set the card types 

            NO_CARD_IN_SLOT 				 = 0,
            CARD_IN_SLOT_NOT_PROGRAMMED 	 = 1,
            ST_Stepper_type,                // 2  (obsolete)
            High_Current_Stepper_Card,      // 3  (41-0093-004)
            Servo_type,                     // 4  (41-0098-001)
            Shutter_type,                   // 5  (obsolete)
            OTM_Dac_type,                   // 6  (on OTM board)
            OTM_RS232_type,                 // 7  (on OTM board)
            High_Current_Stepper_Card_HD,   // 8  (41-0107)
            Slider_IO_type,                 // 9  (41-0104)  // M1 GG, M2 GR, M3 CAM
            Shutter_4_type,                 // 10 (41-0108)
            Piezo_Elliptec_type,            // 11 (connected to slot 8)
            ST_Invert_Stepper_BISS_type,    // 12 (41-0113)
            ST_Invert_Stepper_SSI_type      // 13 (41-0113)
			
-->

<!-- Program solt cards -->
	<!-- Slot 1 2" X Axis-->
	<CardType command="0x4004" data_length="10">
	<Parameter name="slot" type="Byte" length="1" offset="6" value="0"/>	
	<Parameter name="b_type" type="UInt16" length="2" offset="8" value="3"/>
	</CardType>

	<!-- Slot 2 2" Y Axis-->
	<CardType command="0x4004" data_length="10">
	<Parameter name="slot" type="Byte" length="1" offset="6" value="1"/>	
	<Parameter name="b_type" type="UInt16" length="2" offset="8" value="3"/>
	</CardType>

	<!-- Slot 3 2" Z Axis-->
	<CardType command="0x4004" data_length="10">
	<Parameter name="slot" type="Byte" length="1" offset="6" value="2"/>	
	<Parameter name="b_type" type="UInt16" length="2" offset="8" value="3"/>
	</CardType>

	<!-- Slot 4 Condenser PLS stage-->
	<CardType command="0x4004" data_length="10">
	<Parameter name="slot" type="Byte" length="1" offset="6" value="3"/>	
	<Parameter name="b_type" type="UInt16" length="2" offset="8" value="8"/>
	</CardType>

	<!-- Slot 5 2" stage for table optical delay-->
	<CardType command="0x4004" data_length="10">
	<Parameter name="slot" type="Byte" length="1" offset="6" value="4"/>	
	<Parameter name="b_type" type="UInt16" length="2" offset="8" value="3"/>
	</CardType>

	<!-- Slot 6 1" PLS stage extra-->
	<CardType command="0x4004" data_length="10">
	<Parameter name="slot" type="Byte" length="1" offset="6" value="5"/>	
	<Parameter name="b_type" type="UInt16" length="2" offset="8" value="8"/>
	</CardType>

</SystemSettings>

<Slots>
	<Slot type="Stage" name="SLOT_1" slot_num="0"><Stage name="NEMA_17_B_Scope_X_GB_1_1"/></Slot>
	<Slot type="Stage" name="SLOT_2" slot_num="1"><Stage name="NEMA_17_B_Scope_Y_GB_1_1"/></Slot>
	<Slot type="Stage" name="SLOT_3" slot_num="2"><Stage name="NEMA_17_B_Scope_Z_GB_5_1"/></Slot>
	<Slot type="Stage" name="SLOT_4" slot_num="3"><Stage name="PLS"/></Slot>
	<Slot type="Stage" name="SLOT_5" slot_num="4"><Stage name="NEMA_17_B_Scope_X_GB_1_1"/></Slot>
	<Slot type="Stage" name="SLOT_6" slot_num="5"><Stage name="PLS"/></Slot>

</Slots>

<!-- Set smart devices (*** look at "device_id.xml" for ids ***)-->
<Devices>
</Devices>

<Joysticks>
	<Joystick type="Port" name="PORT_0" port_num="0"><Joystick_type name="4_knob_Martin_Duke" /></Joystick>
</Joysticks>

</System>




